<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aozun.testapplication.OkHttpActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_width"
        android:layout_margin="10dp"
        android:id="@+id/okhttpbut"
        android:text="加载图片"
        android:background="@drawable/btn_style1"
        android:textSize="20dp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/imageid"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/glide_iv"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/picasso_iv"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>
