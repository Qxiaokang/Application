<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.aozun.testapplication.activity.LottieActivity"
    android:background="@color/colordblue"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_lottie1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        app:lottie_loop="true"
        android:scaleType="center"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_lottie3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:lottie_loop="true"
        android:scaleType="center"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_lottie2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        app:lottie_loop="true"
        app:lottie_fileName="TwitterHeart.json"
        android:scaleType="center"
        />
    <!--lottie_loop:是否循环  lottie_fileName:json文件名-->
    </LinearLayout>
</FrameLayout>
