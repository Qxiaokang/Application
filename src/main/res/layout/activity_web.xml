<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aozun.testapplication.activity.WebActivity">
    <LinearLayout
        android:id="@+id/ll_webtop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_height"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/bt_height"
            android:layout_height="@dimen/bt_height"
            android:padding="@dimen/padding_text"
            android:layout_margin="@dimen/padding_text"
            android:scaleType="fitXY"
            android:src="@drawable/back1"
            />
        <TextView
            android:id="@+id/tv_web_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="title"
            android:textSize="@dimen/tv_sixe20"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/bt_height"
            android:layout_height="@dimen/bt_height"
            android:padding="@dimen/padding_text"
            android:scaleType="fitXY"
            android:src="@drawable/share1"
            android:layout_margin="@dimen/padding_text"
            />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pb_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_webtop"
        style="?android:attr/progressBarStyleHorizontal"
        />
    <WebView
        android:id="@+id/wv_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pb_web"
        >
    </WebView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin"
        >
        <ImageView
            android:id="@+id/iv_login_qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/bt_height"
            android:src="@drawable/qq_icon1"
            />
        <ImageView
            android:id="@+id/iv_login_wechat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/bt_height"
            android:src="@drawable/wechat_icon2"
            />
        <ImageView
            android:id="@+id/iv_login_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/bt_height"
            android:src="@drawable/weibo_icon2"
            />
    </LinearLayout>
</RelativeLayout>
