<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aozun.testapplication.OkHttpActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/okhttpbut"
        android:text="OkhttpStart"
        android:background="@drawable/bt_bg_selct1"
        android:textColor="@color/bt_textvcolor1"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/downloadmanager_bt"
        android:text="DMStart"
        android:background="@drawable/bt_bg_selct1"
        android:textColor="@color/bt_textvcolor1"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/imageid"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@drawable/normal"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/glide_iv"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/picasso_iv"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>
